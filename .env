# Environment mode
NODE_ENV=development

# Application port
PORT=3000

# PostgreSQL database configuration
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432
DATABASE_URL=postgres://your_database_user:your_database_password@localhost:5432/your_database_name

# Redis configuration
REDIS_URL=redis://localhost:6379

# JWT configuration
JWT_SECRET=your-secure-jwt-secret-at-least-256-bits-long
JWT_EXPIRES_IN=7d

# Booking system
BOOKING_EXPIRY_MINUTES=15
CANCELLATION_DEADLINE_HOURS=24

# Email service (Gmail example)
EMAIL_USER=your-email@gmail.com
EMAIL_APP_PASSWORD=your-gmail-app-password

# Frontend URL (for CORS, links, etc.)
FRONTEND_URL=http://localhost:3000

# Websocket feature toggle
WEBSOCKET_ENABLED=true
